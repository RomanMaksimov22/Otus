# Устанавливаем URL сервера Vagrant
ENV['VAGRANT_SERVER_URL'] = 'https://vagrant.elab.pro'

# Описываем Виртуальные машины
MACHINES = {
  # Указываем имя ВМ "kernel update"
  :"kernel-update" => {
              #Какой vm box будем использовать
              :box_name => "ubuntu/jammy64",
              #Указываем box_version
              #:box_version => "4.3.4",
              #Указываем количество ядер ВМ
              :cpus => 2,
              #Указываем количество ОЗУ в мегабайтах
              :memory => 1024,
            }
}

Vagrant.configure("2") do |config|
  MACHINES.each do |boxname, boxconfig|
    # Отключаем проброс общей папки в ВМ
    config.vm.synced_folder ".", "/vagrant", disabled: true
    # Применяем конфигурацию ВМ
    config.vm.define boxname do |box|
      box.vm.box = boxconfig[:box_name]
      box.vm.box_version = boxconfig[:box_version] if boxconfig[:box_version]
      box.vm.host_name = boxname.to_s
      box.vm.provider "virtualbox" do |v|
        v.memory = boxconfig[:memory]
        v.cpus = boxconfig[:cpus]
      end
      
      # Добавляем провижининг для обновления ядра
      box.vm.provision "shell", inline: <<-SHELL
        echo "Текущая версия ядра:"
        uname -a
        
        echo "Создаем директорию для файлов ядра..."
        mkdir -p /home/vagrant/kernel
        cd /home/vagrant/kernel/
        
        echo "Скачиваем пакеты ядра 6.0.5..."
        wget https://kernel.ubuntu.com/mainline/v6.0.5/amd64/linux-headers-6.0.5-060005-generic_6.0.5-060005.202210261142_amd64.deb
        wget https://kernel.ubuntu.com/mainline/v6.0.5/amd64/linux-headers-6.0.5-060005_6.0.5-060005.202210261142_all.deb
        wget https://kernel.ubuntu.com/mainline/v6.0.5/amd64/linux-image-unsigned-6.0.5-060005-generic_6.0.5-060005.202210261142_amd64.deb
        wget https://kernel.ubuntu.com/mainline/v6.0.5/amd64/linux-modules-6.0.5-060005-generic_6.0.5-060005.202210261142_amd64.deb
        
        echo "Устанавливаем пакеты ядра..."
        dpkg -i *.deb
        
        echo "Проверяем содержимое /boot:"
        ls -al /boot
        
        echo "Обновляем grub..."
        update-grub
        grub-set-default 0
        
        echo "Перезагрузка для применения нового ядра..."
        reboot
      SHELL
    end
  end
end
